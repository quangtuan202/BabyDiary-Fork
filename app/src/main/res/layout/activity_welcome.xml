<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WelcomeActivity"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="#E3E3E3"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/ic_bkg"
        >

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="100dp"
            android:src="@drawable/ic_icon"
            />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:padding="5dp"
            android:text="@string/app_name"
            android:textColor="@color/lightpink"
            android:textSize="30sp"
            android:textStyle="bold"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:id="@+id/slogan"
            android:padding="5dp"
            android:text="Your Baby Tracking Helper"
            android:textColor="@color/grey"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            />


        <androidx.appcompat.widget.AppCompatButton
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:onClick="goSignUpActivity"
        android:padding="20dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/lightpink"
        android:text="@string/swipe_to_start"
        android:background="@drawable/shape"
        android:layout_marginTop="50sp"
        android:textStyle="bold"
        android:drawableRight="@drawable/ic_next"
        >
    </androidx.appcompat.widget.AppCompatButton>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:onClick="goStoreData"
            android:padding="20dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/lightpink"
            android:text="@string/restore_title"
            android:background="@drawable/shape"
            android:layout_marginTop="20sp"
            android:textStyle="bold"
            android:drawableRight="@drawable/ic_next"
            >
        </androidx.appcompat.widget.AppCompatButton>


        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:onClick="goSignIn"
            android:padding="20dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/lightpink"
            android:text="Sign in"
            android:background="@drawable/shape"
            android:layout_marginTop="20sp"
            android:textStyle="bold"
            android:drawableRight="@drawable/ic_next"
            >
        </androidx.appcompat.widget.AppCompatButton>




    </LinearLayout>

</LinearLayout>