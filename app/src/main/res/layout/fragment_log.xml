<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LogFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/car_checkbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="5dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="3dp">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <CheckBox
                            android:id="@+id/cb_feed"
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:layout_margin="5dp"
                            android:background="@drawable/radio_ic_feed_selector"
                            android:button="@null"
                            android:checked="true" />

                        <CheckBox
                            android:id="@+id/cb_pump"
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:layout_margin="5dp"
                            android:background="@drawable/radio_ic_pump_selector"
                            android:button="@null"
                            android:checked="true" />

                        <CheckBox
                            android:id="@+id/cb_formula"
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:layout_margin="5dp"
                            android:background="@drawable/radio_ic_formula_selector"
                            android:button="@null"
                            android:checked="true" />


                        <CheckBox
                            android:id="@+id/cb_pumpbottle"
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:layout_margin="5dp"
                            android:background="@drawable/radio_ic_pumpbottle_selector"
                            android:button="@null"
                            android:checked="true" />

                        <CheckBox
                            android:id="@+id/cb_food"
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:layout_margin="5dp"
                            android:background="@drawable/radio_ic_food_selector"
                            android:button="@null"
                            android:checked="true" />

                        <CheckBox
                            android:id="@+id/cb_diaper"
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:layout_margin="5dp"
                            android:background="@drawable/radio_ic_diaper_selector"
                            android:button="@null"
                            android:checked="true" />

                        <CheckBox
                            android:id="@+id/cb_bath"
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:layout_margin="5dp"
                            android:background="@drawable/radio_ic_bath_selector"
                            android:button="@null"
                            android:checked="true" />

                        <CheckBox
                            android:id="@+id/cb_sleep"
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:layout_margin="5dp"
                            android:background="@drawable/radio_ic_sleep_selector"
                            android:button="@null"
                            android:checked="true" />

                        <CheckBox
                            android:id="@+id/cb_tummy"
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:layout_margin="5dp"
                            android:background="@drawable/radio_ic_tummy_selector"
                            android:button="@null"
                            android:checked="true" />

                        <CheckBox
                            android:id="@+id/cb_sunbathe"
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:layout_margin="5dp"
                            android:background="@drawable/radio_ic_sunbathe_selector"
                            android:button="@null"
                            android:checked="true" />

                        <CheckBox
                            android:id="@+id/cb_play"
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:layout_margin="5dp"
                            android:background="@drawable/radio_ic_play_selector"
                            android:button="@null"
                            android:checked="true" />

                        <CheckBox
                            android:id="@+id/cb_massage"
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:layout_margin="5dp"
                            android:background="@drawable/radio_ic_massage_selector"
                            android:button="@null"
                            android:checked="true" />

                        <CheckBox
                            android:id="@+id/cb_drink"
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:layout_margin="5dp"
                            android:background="@drawable/radio_ic_drink_selector"
                            android:button="@null"
                            android:checked="true" />

                        <CheckBox
                            android:id="@+id/cb_crying"
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:layout_margin="5dp"
                            android:background="@drawable/radio_ic_crying_selector"
                            android:button="@null"
                            android:checked="true" />

                        <CheckBox
                            android:id="@+id/cb_vaccination"
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:layout_margin="5dp"
                            android:background="@drawable/radio_ic_vaccination_selector"
                            android:button="@null"
                            android:checked="true" />

                        <CheckBox
                            android:id="@+id/cb_temperature"
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:layout_margin="5dp"
                            android:background="@drawable/radio_ic_temperature_selector"
                            android:button="@null"
                            android:checked="true" />

                        <CheckBox
                            android:id="@+id/cb_med"
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:layout_margin="5dp"
                            android:background="@drawable/radio_ic_med_selector"
                            android:button="@null"
                            android:checked="true" />

                        <CheckBox
                            android:id="@+id/cb_doctorvisit"
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:layout_margin="5dp"
                            android:background="@drawable/radio_ic_doctorvisit_selector"
                            android:button="@null"
                            android:checked="true" />

                        <CheckBox
                            android:id="@+id/cb_symptom"
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:layout_margin="5dp"
                            android:background="@drawable/radio_ic_symptom_selector"
                            android:button="@null"
                            android:checked="true" />

                        <CheckBox
                            android:id="@+id/cb_potty"
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:layout_margin="5dp"
                            android:background="@drawable/radio_ic_potty_selector"
                            android:button="@null"
                            android:checked="true" />

                    </LinearLayout>
                </HorizontalScrollView>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <RelativeLayout

            android:id="@+id/rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/car_checkbox"
            android:layout_marginTop="2dp">

            <include
                android:id="@+id/rl_txtSelected"
                layout="@layout/selected_date_range"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />





        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_log"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:scrollbars="vertical" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/growth_list_no_dada"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </RelativeLayout>
</FrameLayout>