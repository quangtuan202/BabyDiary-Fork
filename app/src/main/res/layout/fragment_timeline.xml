<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TimelineFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/car_checkbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/icon_date"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:background="@drawable/bg_button_selector"
                android:drawableLeft="@drawable/ic_date"
                android:paddingStart="10dp"
                android:paddingEnd="10dp" />


            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@+id/icon_date"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/cb_feed"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/radio_ic_feed_selector"
                        android:button="@null"
                        android:checked="true" />

                    <CheckBox
                        android:id="@+id/cb_pump"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/radio_ic_pump_selector"
                        android:button="@null"
                        android:checked="true" />

                    <CheckBox
                        android:id="@+id/cb_formula"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/radio_ic_formula_selector"
                        android:button="@null"
                        android:checked="true" />

                    <CheckBox
                        android:id="@+id/cb_pumpbottle"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/radio_ic_pumpbottle_selector"
                        android:button="@null"
                        android:checked="true" />

                    <CheckBox
                        android:id="@+id/cb_food"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/radio_ic_food_selector"
                        android:button="@null"
                        android:checked="true" />

                    <CheckBox
                        android:id="@+id/cb_diaper"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/radio_ic_diaper_selector"
                        android:button="@null"
                        android:checked="true" />

                    <CheckBox
                        android:id="@+id/cb_bath"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/radio_ic_bath_selector"
                        android:button="@null"
                        android:checked="true" />

                    <CheckBox
                        android:id="@+id/cb_sleep"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/radio_ic_sleep_selector"
                        android:button="@null"
                        android:checked="true" />

                    <CheckBox
                        android:id="@+id/cb_tummy"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/radio_ic_tummy_selector"
                        android:button="@null"
                        android:checked="true" />

                    <CheckBox
                        android:id="@+id/cb_sunbathe"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/radio_ic_sunbathe_selector"
                        android:button="@null"
                        android:checked="true" />

                    <CheckBox
                        android:id="@+id/cb_play"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/radio_ic_play_selector"
                        android:button="@null"
                        android:checked="true" />

                    <CheckBox
                        android:id="@+id/cb_massage"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/radio_ic_massage_selector"
                        android:button="@null"
                        android:checked="true" />

                    <CheckBox
                        android:id="@+id/cb_drink"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/radio_ic_drink_selector"
                        android:button="@null"
                        android:checked="true" />

                    <CheckBox
                        android:id="@+id/cb_crying"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/radio_ic_crying_selector"
                        android:button="@null"
                        android:checked="true" />

                    <CheckBox
                        android:id="@+id/cb_vaccination"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/radio_ic_vaccination_selector"
                        android:button="@null"
                        android:checked="true" />

                    <CheckBox
                        android:id="@+id/cb_temperature"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/radio_ic_temperature_selector"
                        android:button="@null"
                        android:checked="true" />

                    <CheckBox
                        android:id="@+id/cb_med"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/radio_ic_med_selector"
                        android:button="@null"
                        android:checked="true" />

                    <CheckBox
                        android:id="@+id/cb_doctorvisit"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/radio_ic_doctorvisit_selector"
                        android:button="@null"
                        android:checked="true" />

                    <CheckBox
                        android:id="@+id/cb_symptom"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/radio_ic_symptom_selector"
                        android:button="@null"
                        android:checked="true" />

                    <CheckBox
                        android:id="@+id/cb_potty"
                        android:layout_width="26dp"
                        android:layout_height="26dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/radio_ic_potty_selector"
                        android:button="@null"
                        android:checked="true" />

                </LinearLayout>
            </HorizontalScrollView>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>


    <FrameLayout
        android:id="@+id/candleStickChart_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/car_checkbox"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="20dp">

        <com.github.mikephil.charting.charts.CandleStickChart
            android:id="@+id/candleStickChart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:rotation="90" />

    </FrameLayout>


    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingBottom="5dp"
        android:paddingRight="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="9sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textSize="9sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:textSize="9sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                android:textSize="9sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8"
                android:textSize="9sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textSize="9sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12"
                android:textSize="9sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="14"
                android:textSize="9sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="16"
                android:textSize="9sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="18"
                android:textSize="9sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20"
                android:textSize="9sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="22"
                android:textSize="9sp" />
        </RelativeLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="24"
            android:textSize="9sp" />


    </LinearLayout>


</RelativeLayout>