<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:orientation="horizontal"
    tools:context=".FeedFragment">

    <!-- TODO: Update blank fragment layout -->


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/breast_feedl"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/button_ring"
            android:backgroundTint="@color/cvPink"
            android:drawableLeft="@drawable/ic_tabfeedl"
            android:paddingStart="28dp"
            android:paddingEnd="28dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Breastfeed L" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/breast_feedr"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/button_ring"
            android:backgroundTint="@color/cvPink"
            android:drawableLeft="@drawable/ic_tabfeedr"
            android:paddingStart="28dp"
            android:paddingEnd="28dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Breastfeed R" />

    </LinearLayout>

</LinearLayout>




