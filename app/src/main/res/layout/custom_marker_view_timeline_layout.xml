<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="45dp"
    android:layout_height="280dp"
    android:layout_below="@+id/rl3"
    android:layout_centerInParent="true"
    android:layout_marginTop="50dp"
    android:background="@drawable/ic_markerimagetimeline"
    android:backgroundTint="@color/darkerGrey"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tvContentIcon"
        android:clipChildren="false"
        >

        <TextView
            android:id="@+id/tvContent"
            android:layout_width="63dp"
            android:layout_height="85dp"
            android:layout_gravity="center_horizontal"
            android:clipToPadding="false"
            android:gravity="center"
            android:rotation="-90"
            android:textColor="@android:color/white"
            android:textSize="10sp" />
    </FrameLayout>

    <ImageView
        android:id="@+id/tvContentIcon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="25dp"
        android:textColor="@android:color/white"
        android:textSize="8sp" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_above="@+id/fl"

        android:clipChildren="false">

        <TextView
            android:id="@+id/tvContentTime"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8sp"
            android:layout_marginTop="115dp"
            android:rotation="270"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/white"
            android:textSize="8dp"
            android:textStyle="bold"
            android:transformPivotX="0dp" />

        <TextView
            android:id="@+id/tvContentDetail"
            android:layout_width="92dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25sp"
            android:layout_marginTop="115dp"
            android:rotation="270"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/white"
            android:textSize="8dp"
            android:textStyle="bold"
            android:transformPivotX="0dp"

            />

    </FrameLayout>
</RelativeLayout>






